@model IEnumerable<LeninTravel.Models.ViajerosViewModel>

@{
    ViewBag.Title = "Index";
}
<link type="text/css" href="~/Content/bootstrap.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
<h2>Consulta de Viajeros</h2>

<p>
    @Html.ActionLink("Crear nuevo Viajero", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.via_nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.via_apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.via_ci)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.via_pasaporte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.via_direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.via_telefono)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.via_nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.via_apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.via_ci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.via_pasaporte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.via_direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.via_telefono)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </td>
    </tr>
</table>
