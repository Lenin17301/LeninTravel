@{
    ViewBag.Title = "Crear Viajeros";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
<link type="text/css" href="~/Content/bootstrap.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
<div class="container">
        <div class="btn-group-justified">
            <form class="form-group-sm">
                <div class="form-group-sm">
                    <label>Nombre:</label>
                    <input type="text" name="nombre" id="name" />
                </div>
                <div class="form-group-sm">
                    <label>Apellido:</label>
                    <input type="text" name="apellido" id="lastname" />
                </div>
                <div class="form-group-sm">
                    <label>Cedula:</label>
                    <input type="text" name="cedula" id="identnum" />
                </div>
                <div class="form-group-sm">
                    <label>Pasaporte:</label>
                    <input type="text" name="pasaporte" id="passport" />
                </div>
                <div class="form-group-sm">
                    <label>Direccion:</label>
                    <input type="text" name="direccion" id="address" />
                </div>
                <div class="form-group-sm">
                    <label>Telefono:</label>
                    <input type="text" name="telefono" id="phone" />
                </div>
                <button type="submit" class="btn btn-default">Guardar</button>
            </form>
        </div>
</div>